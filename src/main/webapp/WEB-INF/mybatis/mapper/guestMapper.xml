<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guest">

	<insert id="insertGuest" parameterType="com.sp.guest.Guest">

		INSERT INTO guest (num,userId,content)
		VALUES
		(guest_seq.NEXTVAL,#{userId},#{content})

	</insert>
 <!-- resultType은 셀렉트일 결우만 있음... -->
	<select id="dataCount" resultType="Integer">
		SELECT NVL(COUNT(*),0) FROM guest
	</select>

	<select id="listGuest" parameterType="map" resultType="com.sp.guest.Guest">

		SELECT * FROM (SELECT ROWNUM rnum,tb.*
		FROM (
		SELECT num,g.userId,content,m1.userName,created
		FROM guest g join member1 m1 on g.userId=m1.userId 
		ORDER BY num DESC)tb
		<![CDATA[
		WHERE ROWNUM<=#{end})
		WHERE rnum>=#{start}
		]]>
	</select>
	
	<delete id="deleteGuest" parameterType="map">
	DELETE FROM guest
		WHERE num=#{num}
		<if test="userId!='admin'">
			AND userId=#{userId}
		</if>
	</delete>



</mapper>